<!DOCTYPE html>
<html>

<head>
  <title>Login</title>
  <link rel="stylesheet" type="text/css" href="style/styles.css">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
  <% if (locals.messages.errors) { %>
    <% messages.errors.forEach( el => { %>
        <div class="alert alert-danger"><%= el.msg %></div>
    <% }) %>    
  <% } %>
  <% if (locals.messages.info) { %>
      <% messages.info.forEach( el => { %>
          <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %>    
  <% } %>
  <div id="body">
    <form class="login-form" action="/login" method="POST">
      <div class="insta-logo-type"></div>
      <input type="email" name="email" class="text-field username" placeholder="Email">
      <input type="password" name="password" class="text-field password" placeholder="Password">
      <input type="submit" name="login" class="def-button login" value="Login">
    </form>
    <div class="form-pointer">
      <p class="msg">Don't have an account? <a href="/signup" class="link">Sign up</a></p>
    </div>
  </div>

  <script type="text/javascript" src="js/app.js"></script>
</body>

</html>